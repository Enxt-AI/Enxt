generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model HeroProduct {
  id        String   @id @default(cuid())
  title     String
  link      String   @default("#")
  thumbnail String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Partner {
  id        String   @id @default(cuid())
  name      String
  logoUrl   String
  color     String   @default("text-indigo-600 bg-indigo-100")
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mentor {
  id        String   @id @default(cuid())
  name      String
  role      String
  imageUrl  String
  bio       String
  expertise String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GalleryItem {
  id        String   @id @default(cuid())
  title     String
  category  String
  imageUrl  String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CareerOpening {
  id           String   @id @default(cuid())
  title        String
  department   String
  location     String
  type         String
  description  String
  requirements String   @default("[]") // JSON array stored as string
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  excerpt   String
  content   String   @default("")
  author    String
  date      String
  category  String
  imageUrl  String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactInfo {
  id        String   @id @default(cuid())
  label     String
  value     String
  type      String   @default("text")
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TeamSection {
  id        String   @id @default(cuid())
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SocialLink {
  id        String   @id @default(cuid())
  platform  String
  url       String
  icon      String
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AiFilmHero {
  id         String   @id @default(cuid())
  videoUrl   String
  titleLine1 String   @default("AI FILM")
  titleLine2 String   @default("PRODUCTION")
  titleLine3 String   @default("WITHOUT LIMITS")
  buttonText String   @default("Start Creating")
  buttonLink String   @default("#contact")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model AiFilmPortfolio {
  id           String   @id @default(cuid())
  sectionTitle String   @default("Creative Productions")
  description  String   @default("")
  videoUrl     String
  videoTitle   String   @default("Featured Video")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model AiFilmProcess {
  id          String   @id @default(cuid())
  number      String
  title       String
  description String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AiFilmService {
  id          String   @id @default(cuid())
  title       String
  description String
  imageUrl    String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AiFilmAward {
  id        String   @id @default(cuid())
  title     String
  category  String
  year      String
  icon      String   @default("Trophy")
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AiFilmTeamMember {
  id          String   @id @default(cuid())
  name        String
  crime       String
  bounty      String
  description String
  imageUrl    String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AiFilmContact {
  id         String   @id @default(cuid())
  title      String   @default("Ready to Light Up the Screen?")
  subtitle   String   @default("Book a discovery call to discuss your project.")
  buttonText String   @default("Book Discovery Call")
  buttonLink String   @default("https://cal.com")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
